<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="375.0" prefWidth="689.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.JavaFX_Chat.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox prefHeight="333.0" prefWidth="649.0" VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane fx:id="scroll" prefHeight="333.0" prefWidth="860.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding></ScrollPane>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtMen" prefHeight="41.0" prefWidth="496.0" promptText="Escribe un mensaje" />
            <Button fx:id="btnSend" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseEntered="#btnSendEntered" onMouseExited="#btnSendExited" prefHeight="40.0" prefWidth="46.0" style="-fx-background-color: #66d1e7; -fx-border-radius: 50;">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnClose" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseEntered="#btnCloseEntered" onMouseExited="#btnCloseExited" prefHeight="40.0" prefWidth="46.0" style="-fx-background-color: #ef4343; -fx-border-radius: 50;" textFill="#c91e1e">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets left="40.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
